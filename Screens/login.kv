MDScreen:
    name:"login"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_y':.95}
            theme_text_color:"Custom"
            text_color:app.COLORS['PRI']
            on_release: 
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        #md_background_color: 1, 1, 1, 1
        MDLabel:
            text: 'B o o k M e!'
            font_name: 'BPoppins'
            font_size: "26sp"
            pos_hint: {"center_x":.5,'center_y':.75}
            halign:"center"
            color: app.COLORS['PRI']
        MDLabel:
            text: 'Signin to continue'
            font_name: 'MPoppins'
            font_size: "16sp"
            pos_hint: {"center_x":.5,'center_y':.7}
            halign:"center"
            color: app.COLORS['LPRI'] 
        MDFloatLayout:
            TextInput:
                hint_text:"Username"
                #size_hint_y:.75
                size_hint: .64, .065
                id: usename_field
                background_color:0,0,0,0
                foreground_color:app.COLORS['PRI']
                cusor_color:app.COLORS['LPRI']
                multiline:False
                pos_hint: {'center_x': .5, 'center_y': .55} 
                font_name:'MPoppins'
                font_size: '14sp'  
            TextInput:
                hint_text:"Password"
                size_hint: .64, .065
                id: passwd_field
                multiline:False
                background_color:0,0,0,0
                foreground_color:app.COLORS['PRI']
                cusor_color:app.COLORS['LLPRI']
                font_name:'MPoppins'
                password:True if (show.icon == "eye-off-outline") else False
                font_size: '14sp'  
                pos_hint: {'center_x': .5,"center_y":.45}
            MDIconButton:
                icon:"eye-off-outline"
                id:show
                text_color:app.COLORS['PRI']
                theme_text_color:"Custom"
                pos_hint: {'center_x': .85,"center_y":.46}
                on_release: 
                    if self.icon == "eye-outline" :self.icon = "eye-off-outline"
                    else:self.icon = "eye-outline"
        Button:
            text:"LOGIN"
            pos_hint: {'center_x': .5,"center_y":.35}
            size_hint: .46, .065
            background_color:app.COLORS['PRI']
            icon:"arrow-right-circle-outline"
            canvas.before:
                Color: 
                    rgb:app.COLORS['PRI']
                Line:
                    width: 1.2
                    rounded_rectangle:self.x,self.y,self.width,self.height,5,5,5,5,100
            on_press: 
                app.login(usename_field.text,passwd_field.text,root)
        Button:
            text:"SIGNUP"
            pos_hint: {'center_x': .5,"center_y":.25}
            size_hint: .46, .065
            background_color:0,0,0,0
            canvas.before:
                Color: 
                    rgb:app.COLORS['PRI']
                Line:
                    width: 1.2
                    rounded_rectangle:self.x,self.y,self.width,self.height,5,5,5,5,100
            on_press: 
                root.manager.transition.direction="left"
                root.manager.current = "signup" 
        MDLabel:
            text: 'Login With :'
            font_name: 'BPoppins'
            pos_hint: {'center_y':.15}
            font_size: "12sp"
            halign:"center"
            color: 1,.65,0,.2
        MDIconButton:
            icon:"google"
            theme_text_color:"Custom"
            text_color:app.COLORS['PRI']
            pos_hint: {'center_x': .4, 'center_y':.1}
        MDIconButton:
            icon:"facebook"
            theme_text_color:"Custom"
            text_color:app.COLORS['PRI']
            pos_hint: {'center_x': .5, 'center_y':.1}
        MDIconButton:
            icon:"github"
            theme_text_color:"Custom"
            text_color:app.COLORS['PRI']
            pos_hint: {'center_x': .6, 'center_y':.1}          